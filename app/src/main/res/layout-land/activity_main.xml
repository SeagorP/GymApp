<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    >

    <Button
        android:id="@+id/treningy"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:text="@string/my_training"
        android:background="@drawable/zaobleniesvetle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyTraining"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/dailyTraining"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/dailytraining"
        android:background="@drawable/zaoblenie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/osobneUdaje"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:text="@string/my_stats"
        android:background="@drawable/zaoblenie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/treningy"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>